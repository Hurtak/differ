{
  "tasks": {
    "dev": "deno run -A npm:vite",
    "build": "deno run -A npm:vite build",
    "test": "deno test",
    "test:watch": "deno test --watch",
    "fix": "deno fmt && deno lint --fix",
    "check": "deno check src/index.tsx && deno test && deno lint && deno fmt --check && deno task build"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "@types/react": "npm:@types/react@^19.1.13",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^5.0.2",
    "diff": "npm:diff@^8.0.2",
    "react": "npm:react@^19.1.1",
    "react-dom": "npm:react-dom@^19.1.1",
    "vite": "npm:vite@^7.1.5"
  },
  "fmt": {
    "lineWidth": 120
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsx", "react"]
    }
  },
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  },
  "vendor": true
}
